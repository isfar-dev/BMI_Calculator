<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F3E5F5"
    >

    <TextView
        android:id="@+id/tvShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI CALCULATOR"
        android:textSize="35sp"
        android:fontFamily="@font/robotocondensedbold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        app:lottie_rawRes="@raw/bmi"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/lAbout"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style"
            android:elevation="10dp"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/bmi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About BMI"
                android:textSize="20sp"
                android:fontFamily="@font/robotocondensed_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lCalculate"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style"
            android:elevation="10dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/bmi_calculator"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate your BMI"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/robotocondensed_black"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/lSave"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style"
            android:elevation="10dp"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/save"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved BMI"
                android:textSize="20sp"
                android:fontFamily="@font/robotocondensed_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lRate"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style"
            android:elevation="10dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:src="@drawable/rating"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate App"
                android:textSize="20sp"
                android:fontFamily="@font/robotocondensed_black"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>